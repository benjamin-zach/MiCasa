<Window x:Class="MiCasaUI.AddCalendarMealWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiCasaUI"
        mc:Ignorable="d"
        Title="AddCalendarMealWindow" Height="150" Width="300" SizeToContent="WidthAndHeight">
    <StackPanel Margin="5 5 5 5" Height="Auto">
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <DatePicker Height="25" HorizontalAlignment="Left" Name="datePicker" VerticalAlignment="Top" Width="150" />
            <ComboBox Name="mealComboBox" Width="100"/>
        </StackPanel>
        <ComboBox Name="recepyComboBox"/>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Margin="10 10 10 10" Width="60" Name="okButton" Content="OK"/>
            <Button Margin="10 10 10 10" Width="60" Name="cancelButton" Content="Cancel"/>
        </StackPanel>
    </StackPanel>
</Window>
